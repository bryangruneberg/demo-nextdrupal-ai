{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"formatter": {
		"indentStyle": "space"
	},
	"linter": {
		"ignore": [
			"node_modules/**",
			"dist/**",
			"build/**",
			".next/**"
		],
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": {
					"level": "warn"
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single"
		}
	}
}